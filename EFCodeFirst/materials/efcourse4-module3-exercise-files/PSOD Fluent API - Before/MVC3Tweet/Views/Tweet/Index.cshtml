@model IEnumerable<DomainClasses.Tweet>

@{
    ViewBag.Title = "Tweets";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { authorId = ViewBag.AuthorId })
</p>
<table width = "80%">
    <tr>
        <th>
            CreateDate
        </th>
        <th >
            Content
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate,"Date")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
